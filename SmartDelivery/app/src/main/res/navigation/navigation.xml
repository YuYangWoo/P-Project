<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.smartdelivery.ui.main.view.fragment.MainFragment"
        android:label="Parcel Protect">
        <action
            android:id="@+id/action_mainFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.smartdelivery.ui.main.view.fragment.AddFragment"
        android:label="송장 확인">
        <action
            android:id="@+id/action_addFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.smartdelivery.ui.main.view.fragment.DetailFragment"
        android:label="송장 확인">
        <argument
            android:name="company"
            app:argType="string" />
        <argument
            android:name="invoice"
            app:argType="string" />
    </fragment>
</navigation>